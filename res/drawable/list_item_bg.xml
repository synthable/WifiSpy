<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

		<item android:state_pressed="true" android:bottom="2dp">
		    <shape
		        android:shape="rectangle"
		        android:dither="true">
		
		        <stroke android:width="1dp" android:color="@android:color/holo_blue_dark" />
		        <corners android:radius="2dp" />
		        <solid android:color="@android:color/holo_blue_light" />

		        <padding
		            android:bottom="8dp"
		            android:left="8dp"
		            android:right="8dp"
		            android:top="8dp" />
		    </shape>
		</item>

		<item android:state_activated="true" android:bottom="2dp">
		    <shape
		        android:shape="rectangle"
		        android:dither="true">
		        <stroke android:width="1dp" android:color="@android:color/holo_blue_dark" />
		        <corners android:radius="2dp" />
		        <solid android:color="@android:color/holo_blue_light" />
		
		        <padding
		            android:bottom="8dp"
		            android:left="8dp"
		            android:right="8dp"
		            android:top="8dp" />
		    </shape>
		</item>

		<item android:drawable="@drawable/card_background">
		</item>

</selector>